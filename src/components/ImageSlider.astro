---
    import Image from 'astro/components/Image.astro'

    interface Props { 
        id: any,  // TODO: Preferably don't pass id here
        images: Array<string>
    }

    const { images, id } = Astro.props
---

<section class="image-slider-container-container">
    <flex class="image-slider-container">
        {images.map((image: any, index: number) => 
            index === 0 ? (
                <Image 
                    transition:name={`blogpost-image-${id}`}
                    src={image} 
                    class="image-slider-image"
                    alt="" 
                    height="400" 
                    width="400" 
                />
            ) :     
                <Image 
                    src={image} 
                    class="image-slider-image"
                    alt="" 
                    height="400" 
                    width="400" 
                />
        )}
    </flex>
    <section class="flex gap-50 padding-50 align-items-center justify-content-center">
        {images.map((image: any, index: number) => 
            <label style="position: relative;">
                <input 
                    type="radio" 
                    style="position: absolute; opacity: 0;" 
                    name="image-slider" 
                    id={`image-slider-position-${index}`} 
                    checked={index === 0} 
                />
                <Image 
                    src={image} 
                    alt="" 
                    style="border-radius: .25rem;"
                    height="48" 
                    width="48" 
                />
            </label>
        )}
    </section>
</section>

<style>
    img {
        border-radius: .5rem;
        object-fit: cover;
        max-width: 100%;
    }

    label:has(img) {
        cursor: pointer;
    }
    
    input[type="radio"]:not(:checked) + img {
        filter: grayscale(1);
    }

    label:active {
        scale: .95;
    }

    .image-slider-container {
        width: 400px;
        max-width: 100%;
        overflow: hidden;
        border-radius: .5rem;
        aspect-ratio: 1 / 1;
    }

    .image-slider-image {
        display: block;
        max-width: 100%;
        max-height: 100%;
        transition: transform .2s ease;
    }
</style>